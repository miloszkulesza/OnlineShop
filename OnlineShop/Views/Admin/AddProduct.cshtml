@model EditProductViewModel
@{
    ViewData["Title"] = "Dodaj produkt";
}

<h2>@ViewData["Title"]</h2>
<hr />

<form method="post" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Nazwa:</label>
        <input type="text" asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Opis:</label>
        <textarea type="text" asp-for="@Model.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Cena:</label>
        <input asp-for="@Model.Price" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ilość:</label>
        <input type="number" asp-for="@Model.Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kategoria:</label>
        <select asp-for="@Model.SelectedCategory" asp-items="@Model.Categories" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Zdjęcie produktu:</label>
        <input type="file" asp-for="@Model.ProductImage" class="form-control" />
    </div>
    Ukryty:
    <input type="checkbox" asp-for="@Model.IsHidden" /><br /><br />
    <input type="submit" class="btn btn-success" value="Zapisz" />
    <a asp-action="Products" class="btn btn-primary">Powrót</a>
</form>