@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Użytkownicy";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div style="margin-bottom:10px">
    @if (User.IsInRole("Administrator"))
    {
        <a asp-action="AddUser" class="btn btn-success">Dodaj</a>
    }
    <a asp-action="Index" class="btn btn-primary">Powrót</a>
</div>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Email</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Nr telefonu</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td scope="col">@user.Email</td>
                <td scope="col">@user.FirstName</td>
                <td scope="col">@user.LastName</td>
                <td scope="col">@user.PhoneNumber</td>
                <td scope="col">
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary w-100" style="margin-bottom:5px;">Edytuj</a>
                </td>
            </tr>
        }
    </tbody>
</table>