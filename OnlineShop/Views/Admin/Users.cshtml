@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Użytkownicy";
}

<h2>@ViewData["Title"]</h2>
<hr />

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Email</th>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Nr telefonu</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td scope="col">@user.Email</td>
                <td scope="col">@user.FirstName</td>
                <td scope="col">@user.LastName</td>
                <td scope="col">@user.PhoneNumber</td>
                <td scope="col">
                    <a class="btn btn-primary w-100" style="margin-bottom:5px;">Edytuj</a>
                    <a class="btn btn-danger w-100" style="margin-bottom:5px;">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-primary">Powrót</a>