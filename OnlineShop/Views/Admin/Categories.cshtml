@model CategoriesListViewModel
@{
    ViewData["Title"] = "Kategorie";
}

<h2>@ViewData["Title"]</h2>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
}

<div style="margin-bottom: 10px;">
    <a asp-action="AddCategory" class="btn btn-success">Dodaj nową</a>
    <a asp-action="Index" class="btn btn-primary">Powrót</a>
</div>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Ilość produktów</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td scope="col">@category.Name</td>
                <td scope="col">@Model.ProductsInCategory[category.Id]</td>
                <td scope="col">
                    <a asp-action="AddCategory" asp-route-id="@category.Id" class="btn btn-primary w-100" style="margin-bottom:5px;">Edytuj</a>
                    <a asp-action="DeleteCategory" asp-route-id="@category.Id" class="btn btn-danger w-100" style="margin-bottom:5px;">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>