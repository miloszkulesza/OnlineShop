@model CategoriesListViewModel
@{
    ViewData["Title"] = "Kategorie";
}

<h2>@ViewData["Title"]</h2>
<hr />

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Ilość produktów</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td scope="col">@category.Name</td>
                <td scope="col">@Model.ProductsInCategory[category.Id]</td>
                <td scope="col">
                    <a class="btn btn-primary w-100" style="margin-bottom:5px;">Edytuj</a>
                    <a class="btn btn-danger w-100" style="margin-bottom:5px;">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-primary">Powrót</a>