@model RolesListViewModel
@{
    ViewData["Title"] = "Grupy";
}

<h2>Grupy</h2>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
}

<div style="margin-bottom:10px;">
    <a asp-action="Index" class="btn btn-primary">Powrót</a>
</div>

<table class="table table-striped table-responsive table-responsive">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Ilość użytkowników</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td scope="col">@role.Name</td>
                <td scope="col">@Model.UsersInRole[role.Id]</td>
                <td scope="col">
                    <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary w-100">Edytuj</a>
                </td>
            </tr>
        }
    </tbody>
</table>