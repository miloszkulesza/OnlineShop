@model RolesListViewModel
@{
    ViewData["Title"] = "Grupy";
}

<h2>Grupy</h2>
<hr />

<div style="margin-bottom:10px;">
    <a asp-action="Index" class="btn btn-primary">Powrót</a>
</div>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Ilość użytkowników</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model.Roles)
        {
            <tr>
                <td scope="col">@group.Name</td>
                <td scope="col">@Model.UsersInRole[group.Id]</td>
                <td scope="col">
                    <a class="btn btn-primary w-100">Edytuj</a>
                </td>
            </tr>
        }
    </tbody>
</table>